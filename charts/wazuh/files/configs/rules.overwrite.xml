<group name="syslog,sudo,">
  <rule id="5400" level="0" noalert="1" overwrite="yes">
    <decoded_as>sudo</decoded_as>
    <description>Initial group for sudo messages.</description>
  </rule>

  <rule id="5402" level="0" overwrite="yes">
